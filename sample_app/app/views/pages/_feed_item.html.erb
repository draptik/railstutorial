<li class="hentry">
  <span class="gravatar"><%= link_to gravatar_for(feed_item.user), feed_item.user %></span>
  <span class="status-body">
    <span class="status-content">
      <span class="user"><%= link_to h(feed_item.user.name), feed_item.user %></span>
      <% if current_user?(feed_item.user) %>
      <span class="action"><%= link_to "delete", feed_item, :method => :delete, :confirm => "You sure?" %></span>
      <% end %>
      <span class="content"><%= h feed_item.content %></span>
    </span>
    <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
  </span>
</li>

